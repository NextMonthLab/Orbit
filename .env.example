# Orbit Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# Node environment (development, production)
NODE_ENV=development

# PostgreSQL connection string
DATABASE_URL=postgres://user:password@host:5432/database

# Session encryption secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-session-secret-here

# Public access token secret (generate with: openssl rand -hex 32)
PUBLIC_TOKEN_SECRET=your-token-secret-here

# Public URL of the application
APP_URL=http://localhost:5000

# =============================================================================
# AI INTEGRATION - Required for chat and ingestion
# =============================================================================

# OpenAI API key for chat and content generation
OPENAI_API_KEY=sk-...

# =============================================================================
# PAYMENTS - Required for subscriptions
# =============================================================================

# Stripe API keys (from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# EMAIL - Required for transactional emails
# =============================================================================

# Resend API key
RESEND_API_KEY=re_...

# Email sender address (optional, defaults to hello@nextmonth.io)
EMAIL_FROM_ADDRESS=hello@nextmonth.io

# =============================================================================
# OBJECT STORAGE - Required for file uploads
# =============================================================================

# S3-compatible storage credentials
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=eu-west-2
AWS_S3_BUCKET=orbit-storage

# =============================================================================
# VIDEO GENERATION (Optional)
# =============================================================================

# Kling Video API
KLING_ACCESS_KEY=
KLING_SECRET_KEY=

# =============================================================================
# BUILD METADATA (Auto-populated)
# =============================================================================

VITE_GIT_COMMIT_HASH=
VITE_BUILD_TIMESTAMP=
